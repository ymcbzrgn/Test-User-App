<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User Data Update</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #ffffff;
      margin: 0;
      padding: 0;
    }
    .table-container {
      width: 90%;
      max-width: 1000px;
      margin: 40px auto;
      background-color: #1f1f1f;
      padding: 20px;
      border-radius: 8px;
    }
    .table {
      width: 100%;
      border-collapse: collapse;
      color: #ffffff;
      font-size: 18px;
    }
    .table th, .table td {
      padding: 10px;
      border: 1px solid #ffffff;
      text-align: left;
    }
    .table th {
      background-color: #333333;
    }
    .table tr:nth-child(even) {
      background-color: #333333;
    }
  </style>
</head>
<body>
  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Surname</th>
        </tr>
      </thead>
      <tbody>
        <% for (const user of users) { %>
          <tr>
            <td><%= user._id %></td>
            <td><%= user.name %></td>
            <td><%= user.surname %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
